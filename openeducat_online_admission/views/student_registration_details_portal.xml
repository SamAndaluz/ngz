<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_my_home_student_registration" name="Portal My Home : student registration"
              inherit_id="portal.portal_my_home"
              priority="65">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-if="user_id.sudo().is_student" t-call="portal.portal_docs_entry">
                <t t-set="title">Admission Registration</t>
                <t t-if="user_id.sudo().is_student">
                    <t t-set="url" t-value="'/student/registration/info/'"/>
                </t>
            </t>
        </xpath>
    </template>

    <template id="openeducat_student_registration_list_data">
        <t t-call="portal.portal_layout">

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Student Registration Details</t>
            </t>
            <t t-if="not registration_id">
                <p>There are currently no information for your account!!!</p>
            </t>

            <div t-if="registration_id" style="background-color:white; padding: 20px 40px 20px 40px;">
                <div class="mt16">
                    <div t-if="registration_id" class="row col-md-12">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Application Number</th>
                                    <th>Name</th>
                                    <th>Admission Date</th>
                                    <th>Application date</th>
                                    <th>Course</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="registration_id" t-as="registration">
                                    <tr>
                                        <td>
                                            <span t-esc="registration.application_number"/>
                                        </td>
                                        <td>
                                            <span t-esc="registration.name"/>
                                        </td>
                                        <td>
                                            <span t-esc="registration.admission_date" t-options="{'widget': 'date'}"/>
                                        </td>
                                        <td>
                                            <span t-esc="registration.application_date"
                                                  t-options="{'widget': 'datetime'}"/>
                                        </td>
                                        <td>
                                            <span t-esc="registration.course_id.name"/>
                                        </td>
                                        <td>
                                            <span t-esc="{'false':Fasle,'draft':'Draft', 'online':'Online Admission','submit':'Submitted',
                                            'confirm':'Confirmed', 'admission':'Admission Confirm','reject': 'Rejected','pending': 'Pending', 'cancel': 'Cancelled', 'done': 'Done'}[registration.state]"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>
